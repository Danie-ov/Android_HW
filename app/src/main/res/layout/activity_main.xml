<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#999999"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heart1_IMVW"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"/>

            <ImageView
                android:id="@+id/heart2_IMVW"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"/>

            <ImageView
                android:id="@+id/heart3_IMVW"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@drawable/road"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_VW_Left_obstacle1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/main_VW_Left_obstacle2"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/main_VW_Left_obstacle3"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/main_VW_Left_obstacle4"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_VW_Center_obstacle1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/main_VW_Center_obstacle2"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/main_VW_Center_obstacle3"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/main_VW_Center_obstacle4"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_VW_Right_obstacle1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/main_VW_Right_obstacle2"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/main_VW_Right_obstacle3"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/main_VW_Right_obstacle4"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_LAY_car"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/cardview_dark_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_IMG_Car_Left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_IMG_Car_Center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/car" />

            <ImageView
                android:id="@+id/main_IMG_Car_Right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:visibility="invisible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.15"
            android:background="@color/gray">

            <ImageButton
                android:id="@+id/main_BTN_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/arrow_left"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/main_BTN_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>