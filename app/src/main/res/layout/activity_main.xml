        <LinearLayout
            android:id="@+id/main_IMG_car"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/new_road"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_IMG_Car_mostLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_IMG_Car_Left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/car" />

            <ImageView
                android:id="@+id/main_IMG_Car_Center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_IMG_Car_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:visibility="invisible" />

